<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"

    >


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:gravity="center"
        android:layout_marginTop="25dp"
        android:text="@string/welcome"
        android:textColor="@android:color/holo_blue_dark"
        android:textStyle="italic"
        android:id="@+id/textviewNumQeustion"
        android:textSize="22dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:text="@string/question"
        android:textColor="@android:color/holo_blue_dark"
        android:textStyle="italic"
        android:id="@+id/textviewQeustion"
        android:textSize="22dp"
        android:layout_below="@+id/textviewNumQeustion"/>

    <ImageView
        android:id="@+id/imagemath"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:padding="6dp"
        android:paddingTop="15dp"
        android:src="@drawable/geography" />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textviewQeustion"
        android:layout_marginTop="6dp"
        android:orientation="vertical"
      >

        <Button
            android:id="@+id/butoption1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:padding="4dp"
            android:text="option1"
            android:textAllCaps="false" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:padding="4dp"
            android:text="option2"
            android:id="@+id/butoption2"
            android:textAllCaps="false"


            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:padding="4dp"
            android:text="option3"
            android:id="@+id/butoption3"
            android:textAllCaps="false"


            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:padding="4dp"
            android:text="option4"
            android:id="@+id/butoption4"
            android:textAllCaps="false"


            />
</LinearLayout>


</RelativeLayout>